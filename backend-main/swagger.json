{
  "openapi": "3.0.0",
  "paths": {
    "/auth/get-code": {
      "post": {
        "operationId": "AuthController_loginClient",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateAuthPhoneDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OTP sent successfully"
          },
          "400": {
            "description": "Invalid phone number"
          }
        },
        "summary": "Request OTP code for login",
        "tags": [
          "auth"
        ]
      }
    },
