    },
    {
      "url": "http://localhost:3000/api",
      "description": "Local Development"
    }
  ],
  "components": {
    "securitySchemes": {
      "JWT-auth": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http",
        "name": "JWT",
        "description": "Enter JWT token",
        "in": "header"
      }
    },
    "schemas": {
      "CreateAuthPhoneDto": {
        "type": "object",
        "properties": {
          "phoneNumber": {
            "type": "string",
            "example": "0347327950"
          }
        },
        "required": [
          "phoneNumber"
        ]
      },
      "VerifingCodeDto": {
        "type": "object",
        "properties": {
          "phoneNumber": {
            "type": "string",
            "example": "0347327950"
          },
          "code": {
            "type": "string",
            "example": "1234"
          }
        },
        "required": [
          "phoneNumber",
          "code"
        ]
      },
      "ObjectId": {
        "type": "object",
        "properties": {}
      },
      "LoginChosenUserDto": {
        "type": "object",
        "properties": {
          "id": {
            "example": "69130451810c61130917a1c6",
            "allOf": [
              {
                "$ref": "#/components/schemas/ObjectId"
              }
            ]
          },
          "phone": {
            "type": "string",
            "example": "0347327950"
          },
          "activated": {
            "type": "boolean",
            "example": true
          }
        },
        "required": [
          "id",
          "phone",
          "activated"
        ]
      },
      "RefreshTokenDto": {
        "type": "object",
        "properties": {
          "refreshToken": {
            "type": "string",
            "example": "0bnm-347cvbn-327vbhnj-9bn50"
          }
        },
        "required": [
          "refreshToken"
        ]
      },
      "LogOutDto": {
        "type": "object",
        "properties": {
          "id": {
            "example": "0bnm-347cvbn-327vbhnj-9bn50",
            "allOf": [
              {
                "$ref": "#/components/schemas/ObjectId"
              }
            ]
          }
        },
        "required": [
          "id"
        ]
      },
      "CreateUserDto": {
        "type": "object",
        "properties": {
          "idUser": {
            "type": "string",
            "description": "Identifiant du customer venant du backend A",
            "example": "42"
          },
          "name": {
            "type": "string",
            "description": "Nom complet de l'utilisateur",
            "example": "Alice Doe"
          },
          "phoneNumber": {
            "type": "string",
            "description": "Numéro de téléphone de l'utilisateur",
            "example": "+261341234567"
          },
          "compteFb": {
            "type": "string",
            "description": "Compte Facebook de l'utilisateur",
            "example": "Miracle Quin"
          }
        },
        "required": [
          "idUser"
        ]
      },
      "UpdateUserDto": {
        "type": "object",
        "properties": {
          "_id": {
            "example": "sdcfvghbnj",
            "allOf": [
              {
                "$ref": "#/components/schemas/ObjectId"
              }
            ]
          },
          "idUser": {
            "type": "string",
            "example": "12"
          }
        },
        "required": [
          "_id",
          "idUser"
        ]
      },
      "CreateRegisterDto": {
        "type": "object",
        "properties": {
          "firstname": {
            "type": "string",
            "description": "First name",
            "example": "Alice"
          },
          "lastname": {
            "type": "string",
            "description": "Last name",
            "example": "Doe"
          },
          "sex": {
            "type": "string",
            "description": "Genre l'utilisateur",
            "example": "M"
          },
          "phone": {
            "type": "string",
            "description": "Numéro de téléphone de l'utilisateur",
            "example": "+261341234567"
          },
          "adress": {
            "type": "string",
            "description": "Adresse de l'utilisateur",
            "example": "Fianarantsoa"
          },
          "email": {
            "type": "string",
            "description": "Email de l'utilisateur",
            "example": "jr@rj.j"
          },
          "birthdate": {
            "format": "date-time",
            "type": "string",
            "description": "Date d'anniversaire de l'utilisateur",
            "example": "1997-06-12T21:00:00.000+00:00"
          },
          "birthplace": {
            "type": "string",
            "description": "Lieu de naissance de l'utilisateur",
            "example": "Antananarivo"
          },
          "compteFb": {
            "type": "string",
            "description": "Compte Facebook de l'utilisateur",
            "example": "https://facebook.com/jennie.kim"
          },
          "inactive": {
            "type": "boolean",
            "description": "Compte actif",
            "example": "false"
          }
        },
        "required": [
          "firstname",
          "phone",
          "birthdate",
          "birthplace",
          "inactive"
        ]
      },
      "FormationResponseDto": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "65d0a4bfb663b65ff8d81144"
          },
          "name": {
            "type": "string",
            "example": "Web Fullstack"
          },
          "fullname": {
            "type": "string",
            "example": "Learn modern fullstack development"
          },
          "createdAt": {
            "type": "string",
            "example": "2025-06-01T00:00:00.000Z"
          },
          "updatedAt": {
            "type": "string",
            "example": "2025-06-01T00:00:00.000Z"
          },
          "inactive": {
            "type": "boolean",
            "example": false
          }
        },
        "required": [
          "_id",
          "name",
          "fullname",
          "createdAt",
          "updatedAt",
          "inactive"
        ]
      }
    }
  }
}